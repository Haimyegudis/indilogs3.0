<Application x:Class="IndiLogs_3._0.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Application.Resources>
        <FontFamily x:Key="ContentFontFamily">Segoe UI</FontFamily>
        <FontWeight x:Key="ContentFontWeight">Normal</FontWeight>

        <FontFamily x:Key="GlobalUIFont">Segoe UI</FontFamily>

        <SolidColorBrush x:Key="BgDark" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BgPanel" Color="#252526"/>
        <SolidColorBrush x:Key="BgCard" Color="#2D2D30"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#3B82F6"/>
        <SolidColorBrush x:Key="PrimaryHover" Color="#60A5FA"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#3F3F46"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontFamily" Value="{StaticResource GlobalUIFont}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource BorderColor}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E3E42"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryBtn" TargetType="Button" BasedOn="{StaticResource ModernBtn}">
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LogRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding RowBackground}" />
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}" />
            <Setter Property="BorderThickness" Value="0"/>

            <Setter Property="ToolTipService.InitialShowDelay" Value="1500"/>
            <Setter Property="ToolTipService.ShowDuration" Value="20000"/>
            <Setter Property="ToolTip">
                <Setter.Value>
                    <ToolTip Background="{DynamicResource BgCard}" 
                     BorderBrush="{DynamicResource BorderColor}" 
                     Foreground="{DynamicResource TextPrimary}">
                        <StackPanel MaxWidth="600">
                            <TextBlock Text="{Binding Date, StringFormat='Time: yyyy-MM-dd HH:mm:ss.fff'}" FontWeight="Bold" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding ThreadName, StringFormat='Thread: {0}'}" Foreground="{DynamicResource PrimaryColor}" Margin="0,0,0,5"/>
                            <Separator Background="{DynamicResource BorderColor}" Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding Message}" TextWrapping="Wrap"/>
                        </StackPanel>
                    </ToolTip>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#203B82F6"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}" />
                    <Setter Property="BorderThickness" Value="2,0,0,0" />
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#33FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource BgDark}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="RowBackground" Value="{DynamicResource BgDark}"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#333"/>
            <Setter Property="VerticalGridLinesBrush" Value="Transparent"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="RowHeight" Value="24"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource BgPanel}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="FontFamily" Value="{StaticResource GlobalUIFont}"/>
        </Style>

        <Style TargetType="TabItem">
            <Setter Property="FontFamily" Value="{StaticResource GlobalUIFont}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border" Padding="12,8" BorderThickness="0,0,0,2" BorderBrush="Transparent" Background="Transparent">
                            <ContentPresenter x:Name="ContentSite" VerticalAlignment="Center" HorizontalAlignment="Center" ContentSource="Header"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                                <Setter TargetName="Border" Property="Background" Value="#1A3B82F6"/>
                                <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="{DynamicResource TextSecondary}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource GlobalUIFont}"/>
        </Style>

    </Application.Resources>
</Application>