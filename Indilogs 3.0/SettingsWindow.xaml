<Window x:Class="IndiLogs_3._0.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="280" Width="250"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="Manual" 
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Border Background="{DynamicResource BgDark}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="3" Padding="10">
        <StackPanel Orientation="Vertical">

            <TextBlock Text="Appearance" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
                <Button Command="{Binding ToggleThemeCommand}" Click="Button_Click"
                        Style="{DynamicResource ModernBtn}" 
                        Width="40" Height="40" ToolTip="Switch Theme" Margin="5">
                    <TextBlock Text="🌗" FontSize="18" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <Button Command="{Binding ToggleBoldCommand}" Click="Button_Click"
                        Style="{DynamicResource ModernBtn}" 
                        Width="40" Height="40" ToolTip="Toggle Bold Text" Margin="5">
                    <TextBlock Text="𝐁" FontSize="18" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>

                <Button Click="OpenFonts_Click"
                        Style="{DynamicResource ModernBtn}" 
                        Width="40" Height="40" ToolTip="Select Font" Margin="5">
                    <TextBlock Text="🔤" FontSize="18" FontWeight="Normal" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Button>
            </StackPanel>

            <Separator Background="{DynamicResource BorderColor}" Margin="0,10"/>

            <TextBlock Text="Context Filter Range" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,0,5"/>
            <Grid Margin="0,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <Slider Grid.Column="0" Minimum="1" Maximum="60" Value="{Binding ContextSeconds}" TickFrequency="1" IsSnapToTickEnabled="True" VerticalAlignment="Center"/>

                <TextBox Grid.Column="1" Text="{Binding ContextSeconds}" Background="{DynamicResource BgCard}" Foreground="{DynamicResource TextPrimary}" BorderThickness="0" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"/>

                <ComboBox Grid.Column="2" 
              ItemsSource="{Binding TimeUnits}" 
              SelectedItem="{Binding SelectedTimeUnit}"
              Margin="5,0,0,0"
              VerticalAlignment="Center"
              FontSize="11"
              Padding="4"/>
            </Grid>

            <Separator Background="{DynamicResource BorderColor}" Margin="0,10"/>

            <Button Click="OpenHelp_Click"
                    Style="{DynamicResource ModernBtn}" 
                    Height="30" ToolTip="Help &amp; Manual" Margin="0,5">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="❓ Help" VerticalAlignment="Center"/>
                </StackPanel>
            </Button>

            <Button Click="Button_Click" Content="Close" Style="{DynamicResource ModernBtn}" Background="{DynamicResource BgCard}" Margin="0,10,0,0"/>

        </StackPanel>
    </Border>
</Window>