<Window x:Class="IndiLogs_3._0.Views.FilterOutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter Out Text" Height="280" Width="600"
        WindowStartupLocation="CenterOwner" 
        Background="{DynamicResource BgDark}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Enter text to hide:" FontWeight="Bold" FontSize="14" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimary}"/>

        <TextBox Grid.Row="1" x:Name="TextToFilterTextBox" 
                 TextWrapping="Wrap" 
                 Height="100" 
                 VerticalScrollBarVisibility="Auto" 
                 Padding="8" 
                 FontSize="13"
                 Margin="0,0,0,20"
                 AcceptsReturn="False"
                 Background="{DynamicResource BgCard}" 
                 Foreground="{DynamicResource TextPrimary}" 
                 BorderBrush="{DynamicResource BorderColor}"
                 CaretBrush="{DynamicResource TextPrimary}"/>

        <TextBlock Grid.Row="2" 
                   Text="Rows containing this text will be temporarily hidden. You can show/hide them using the 'FILTER OUT' checkbox in the main window."
                   FontSize="12" 
                   Foreground="{DynamicResource TextSecondary}" 
                   TextWrapping="Wrap"
                   Margin="0,0,0,20"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="✔ Apply Filter" Click="OK_Click" Style="{DynamicResource ModernBtn}" Background="#10B981" Foreground="White" FontSize="13" IsDefault="True"/>

            <Button Content="✖ Cancel" Click="Cancel_Click" Style="{DynamicResource ModernBtn}" Background="#6C757D" Foreground="White" FontSize="13" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>