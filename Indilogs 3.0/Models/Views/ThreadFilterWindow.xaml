<Window x:Class="IndiLogs_3._0.Views.ThreadFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Filter by Thread" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BgDark}"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="SearchBox" Grid.Row="0" Margin="0,0,0,10"
                 Padding="5" FontSize="13" 
                 Background="{DynamicResource BgCard}" 
                 Foreground="{DynamicResource TextPrimary}"
                 BorderBrush="{DynamicResource BorderColor}"
                 TextChanged="SearchBox_TextChanged"
                 Tag="Search threads..."/>

        <ListBox x:Name="ThreadsList" Grid.Row="1" 
                 Background="{DynamicResource BgCard}" 
                 BorderThickness="0" 
                 Foreground="{DynamicResource TextPrimary}"
                 SelectionMode="Extended" 
                 MouseDoubleClick="ThreadsList_MouseDoubleClick">
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem">
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#3E3E42"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Vertical" Margin="0,10,0,0">
            <Button Content="✔ Apply Filter" Click="Apply_Click" Style="{DynamicResource ModernBtn}" Background="#10B981" Foreground="White" Margin="0,0,0,5"/>
            <Button Content="🗑 Clear Filter" Click="Clear_Click" Style="{DynamicResource ModernBtn}" Background="{DynamicResource DangerColor}" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>