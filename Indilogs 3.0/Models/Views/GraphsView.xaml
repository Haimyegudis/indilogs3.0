<UserControl x:Class="IndiLogs_3._0.Views.GraphsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:vm="clr-namespace:IndiLogs_3._0.ViewModels"
             xmlns:models="clr-namespace:IndiLogs_3._0.Models"
             xmlns:converters="clr-namespace:IndiLogs_3._0.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <UserControl.Resources>
        <converters:OxyColorToBrushConverter x:Key="OxyColorToBrushConverter"/>
        <converters:ArrayConverter x:Key="ArrayConverter"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <Style x:Key="ModernToggleBtn" TargetType="ToggleButton">
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" BorderThickness="{TemplateBinding BorderThickness}" BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3E3E42"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource PrimaryColor}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{DynamicResource BgDark}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="220"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,0,1,0" Padding="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Signals Explorer" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="5"/>
                <TextBox Grid.Row="1" Text="{Binding TreeSearchText, UpdateSourceTrigger=PropertyChanged}" 
                         Background="{DynamicResource BgCard}" Foreground="{DynamicResource TextPrimary}" 
                         Padding="5" Margin="0,0,0,5" BorderBrush="{DynamicResource BorderColor}" Tag="Search..."/>

                <TreeView Grid.Row="2" ItemsSource="{Binding ComponentTree}" 
                          Background="Transparent" BorderThickness="0" Foreground="{DynamicResource TextPrimary}">
                    <TreeView.ItemContainerStyle>
                        <Style TargetType="TreeViewItem">
                            <EventSetter Event="MouseDoubleClick" Handler="TreeViewItem_MouseDoubleClick"/>
                            <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                            <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                        </Style>
                    </TreeView.ItemContainerStyle>
                    <TreeView.ItemTemplate>
                        <HierarchicalDataTemplate ItemsSource="{Binding Children}" DataType="{x:Type models:GraphNode}">
                            <TextBlock Text="{Binding Name}"/>
                        </HierarchicalDataTemplate>
                    </TreeView.ItemTemplate>
                </TreeView>
            </Grid>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="{DynamicResource BgCard}" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderColor}">
                <StackPanel>
                    <Grid Background="{DynamicResource BgPanel}" Height="20">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="5,0">
                            <ToggleButton IsChecked="{Binding IsToolbarPinned}" Content="📌" 
                                           Style="{StaticResource ModernToggleBtn}" Width="25" Height="18" Padding="0" 
                                           ToolTip="Pin Toolbar"/>
                            <ToggleButton IsChecked="{Binding IsToolbarVisible}" Content="Show Tools" 
                                          FontSize="10" Style="{StaticResource ModernToggleBtn}" Height="18" Padding="5,0"
                                          Visibility="{Binding IsToolbarPinned, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=Inverted}"/>
                        </StackPanel>
                    </Grid>

                    <ScrollViewer VerticalScrollBarVisibility="Disabled" HorizontalScrollBarVisibility="Auto" 
                                  Visibility="{Binding IsToolbarVisible, Converter={StaticResource BooleanToVisibilityConverter}}">
                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">

                            <Border BorderBrush="#444" BorderThickness="1" CornerRadius="3" Margin="0,0,10,0" Padding="5,2">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="&lt;&lt;" Command="{Binding SpeedDownCommand}" Style="{DynamicResource ModernBtn}" Padding="5,0" Margin="0,0,2,0" ToolTip="Slower"/>
                                    <ToggleButton Content="▶" IsChecked="{Binding IsPlaying}" Command="{Binding PlayCommand}" ToolTip="Play (Entire Log or Selection)" Style="{StaticResource ModernToggleBtn}" Margin="0,0,2,0"/>
                                    <Button Content="⏸" Command="{Binding PauseCommand}" ToolTip="Pause" Style="{DynamicResource ModernBtn}" Margin="0,0,2,0"/>
                                    <Button Content="&gt;&gt;" Command="{Binding SpeedUpCommand}" Style="{DynamicResource ModernBtn}" Padding="5,0" Margin="0,0,5,0" ToolTip="Faster"/>
                                    <TextBlock Text="{Binding PlaybackSpeedText}" Foreground="Gray" VerticalAlignment="Center" FontWeight="Bold" Width="40" TextAlignment="Center"/>
                                </StackPanel>
                            </Border>

                            <Border BorderBrush="#444" BorderThickness="1" CornerRadius="3" Margin="0,0,10,0" Padding="5,2">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" FlowDirection="RightToLeft">

                                    <TextBlock Text="Start:" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                                    <RepeatButton Content="+" Command="{Binding StepTimeCommand}" Width="20" Height="20" Delay="500" Interval="100">
                                        <RepeatButton.CommandParameter>
                                            <MultiBinding Converter="{StaticResource ArrayConverter}">
                                                <Binding Source="Start"/>
                                                <Binding Source="60"/>
                                            </MultiBinding>
                                        </RepeatButton.CommandParameter>
                                    </RepeatButton>
                                    <TextBox Text="{Binding FilterStartTime, StringFormat='HH:mm:ss'}" Width="60" TextAlignment="Center" IsReadOnly="True" Background="Transparent" Foreground="{DynamicResource TextPrimary}" BorderThickness="0" VerticalAlignment="Center" FontWeight="Bold"/>
                                    <RepeatButton Content="-" Command="{Binding StepTimeCommand}" Width="20" Height="20" Delay="500" Interval="100">
                                        <RepeatButton.CommandParameter>
                                            <MultiBinding Converter="{StaticResource ArrayConverter}">
                                                <Binding Source="Start"/>
                                                <Binding Source="-60"/>
                                            </MultiBinding>
                                        </RepeatButton.CommandParameter>
                                    </RepeatButton>

                                    <TextBlock Text=" ➜ " Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center" Margin="10,0"/>

                                    <TextBlock Text="End:" VerticalAlignment="Center" Margin="5,0" FontWeight="Bold"/>
                                    <RepeatButton Content="+" Command="{Binding StepTimeCommand}" Width="20" Height="20" Delay="500" Interval="100">
                                        <RepeatButton.CommandParameter>
                                            <MultiBinding Converter="{StaticResource ArrayConverter}">
                                                <Binding Source="End"/>
                                                <Binding Source="60"/>
                                            </MultiBinding>
                                        </RepeatButton.CommandParameter>
                                    </RepeatButton>
                                    <TextBox Text="{Binding FilterEndTime, StringFormat='HH:mm:ss'}" Width="60" TextAlignment="Center" IsReadOnly="True" Background="Transparent" Foreground="{DynamicResource TextPrimary}" BorderThickness="0" VerticalAlignment="Center" FontWeight="Bold"/>
                                    <RepeatButton Content="-" Command="{Binding StepTimeCommand}" Width="20" Height="20" Delay="500" Interval="100">
                                        <RepeatButton.CommandParameter>
                                            <MultiBinding Converter="{StaticResource ArrayConverter}">
                                                <Binding Source="End"/>
                                                <Binding Source="-60"/>
                                            </MultiBinding>
                                        </RepeatButton.CommandParameter>
                                    </RepeatButton>

                                    <Button Content="Apply" Command="{Binding ApplyTimeFilterCommand}" Style="{DynamicResource ModernBtn}" Background="#3B82F6" Foreground="White" Margin="10,0,2,0" Padding="10,2"/>
                                    <Button Content="Reset" Command="{Binding ResetZoomCommand}" Style="{DynamicResource ModernBtn}" Margin="2,0" Padding="10,2"/>
                                </StackPanel>
                            </Border>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <ToggleButton Content="📏 Measure" ToolTip="Ctrl+Click on chart to measure" IsChecked="{Binding IsMeasureMode}" Style="{StaticResource ModernToggleBtn}" Margin="0,0,10,0"/>
                                <Button Content="➕ Chart" Command="{Binding AddChartCommand}" Style="{DynamicResource ModernBtn}" Margin="2"/>
                                <Button Content="➖ Chart" Command="{Binding RemoveChartCommand}" Style="{DynamicResource ModernBtn}" Margin="2"/>
                                <Button Content="🧹 Clear" Command="{Binding ClearChartCommand}" Style="{DynamicResource ModernBtn}" Margin="2" Background="#444"/>
                            </StackPanel>

                        </WrapPanel>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding Charts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="200" Margin="2" BorderThickness="{Binding BorderThickness}">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderBrush" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsActive}" Value="True">
                                                <Setter Property="BorderBrush" Value="#3B82F6"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <DockPanel LastChildFill="False" Background="#111">
                                        <TextBlock Text="{Binding Title}" Foreground="#AAA" FontSize="11" Margin="5,2" FontWeight="Bold" DockPanel.Dock="Left"/>
                                        <Button Content="↗" Command="{Binding FloatCommand}" Width="25" Padding="0" DockPanel.Dock="Right" 
                                                ToolTip="Detach Chart" Background="Transparent" Foreground="White" BorderThickness="0" Cursor="Hand"/>
                                    </DockPanel>
                                    <oxy:PlotView Grid.Row="1" Model="{Binding Model}" Controller="{Binding Controller}" Background="Transparent"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <TextBlock Grid.Row="2" Text="{Binding Status}" Foreground="#00FF00" Background="Black" Padding="5,0" VerticalAlignment="Center"/>
        </Grid>

        <Border Grid.Column="2" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1,0,0,0" Padding="0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Transitions" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="5"/>
                <ListBox Grid.Row="1" ItemsSource="{Binding StateList}" Background="Transparent" BorderThickness="0" Padding="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="0,1"/>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderThickness="0,0,0,1" BorderBrush="#333" Padding="5" Margin="0" Background="Transparent">
                                <Border.InputBindings>
                                    <MouseBinding Gesture="LeftClick" 
                                                  Command="{Binding DataContext.ZoomToStateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                  CommandParameter="{Binding}"/>
                                </Border.InputBindings>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Rectangle Grid.Column="0" Fill="{Binding Color, Converter={StaticResource OxyColorToBrushConverter}}" Width="5" VerticalAlignment="Stretch"/>
                                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}" TextWrapping="Wrap" FontSize="11"/>
                                        <TextBlock Text="{Binding StartTimeValue, StringFormat='{}{0:HH:mm:ss.fff}'}" FontSize="10" Foreground="#AAA"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>
    </Grid>
</UserControl>