<Window x:Class="IndiLogs_3._0.Views.SnakeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="IndiSnake 2.0" Height="500" Width="700"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="#222"
        PreviewKeyDown="Window_PreviewKeyDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="180"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" BorderBrush="#444" BorderThickness="2" Margin="10">
            <Canvas x:Name="GameCanvas" Background="Black" ClipToBounds="True"/>
        </Border>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="SCORE" Foreground="Gray" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
            <TextBlock x:Name="ScoreText" Text="0" Foreground="#10B981" FontSize="36" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock.Effect>
                    <DropShadowEffect Color="#10B981" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
                </TextBlock.Effect>
            </TextBlock>

            <TextBlock Text="DIFFICULTY" Foreground="Gray" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,10,0,5"/>
            <ComboBox x:Name="DifficultySelector" SelectedIndex="1" SelectionChanged="DifficultySelector_SelectionChanged"
                      Focusable="False" Margin="10,0" Padding="5">
                <ComboBoxItem Content="Easy (Slow)" Tag="150"/>
                <ComboBoxItem Content="Medium" Tag="100"/>
                <ComboBoxItem Content="Hard (Fast)" Tag="50"/>
            </ComboBox>

            <TextBlock Text="TOP SCORES" Foreground="Gray" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,30,0,5"/>
            <Border Background="#333" CornerRadius="5" Margin="5" Padding="10">
                <TextBlock x:Name="HighScoresText" Text="No Records" Foreground="#FFD700" FontSize="14" 
                           HorizontalAlignment="Center" TextAlignment="Center" LineHeight="22"/>
            </Border>

            <Button x:Name="RestartBtn" Content="NEW GAME" Click="RestartBtn_Click" 
                    Focusable="False"
                    Background="#3B82F6" Foreground="White" FontWeight="Bold" 
                    Height="40" Margin="10,40,10,0" Cursor="Hand"/>

            <TextBlock Text="Controls: Arrows" Foreground="#666" FontSize="11" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>

        <Grid x:Name="Overlay" Grid.Column="0" Background="#CC000000" Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="GAME OVER" Foreground="#FF4444" FontSize="48" FontWeight="Bold" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Red" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>
                <TextBlock x:Name="FinalScoreText" Text="Score: 0" Foreground="White" FontSize="24" HorizontalAlignment="Center" Margin="0,10"/>
                <TextBlock Text="Press 'R' to Restart" Foreground="Gray" FontSize="16" HorizontalAlignment="Center" Margin="0,20"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>