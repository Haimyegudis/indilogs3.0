<Window x:Class="IndiLogs_3._0.Views.MarkedLogsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:IndiLogs_3._0.Controls"
        Title="Marked Lines" 
        Height="550" Width="900"
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource BgDark}"
        ResizeMode="CanResizeWithGrip">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="150"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="MarkedList" Grid.Row="0"
                  ItemsSource="{Binding MarkedLogs}" 
                  SelectedItem="{Binding SelectedItem, Mode=TwoWay}"
                  Background="Transparent" 
                  BorderThickness="0" 
                  Foreground="{DynamicResource TextPrimary}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  RowStyle="{DynamicResource LogRowStyle}"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  HorizontalScrollBarVisibility="Disabled"
                  PreviewKeyDown="MarkedList_PreviewKeyDown">

            <DataGrid.InputBindings>
                <MouseBinding Gesture="LeftDoubleClick" 
                              Command="{Binding DataContext.JumpToLogCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                              CommandParameter="{Binding SelectedItem, ElementName=MarkedList}"/>
            </DataGrid.InputBindings>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Timestamp" Binding="{Binding Date, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Width="170" FontWeight="Bold"/>

                <DataGridTextColumn Header="Thread" Binding="{Binding ThreadName}" Width="120">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Message" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <controls:HighlightTextBlock 
                                Text="{Binding Message}" 
                                VerticalAlignment="Center">
                                <controls:HighlightTextBlock.Style>
                                    <Style TargetType="controls:HighlightTextBlock">
                                        <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </controls:HighlightTextBlock.Style>
                            </controls:HighlightTextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" VerticalAlignment="Center" Background="#444" ShowsPreview="True"/>

        <Border Grid.Row="2" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0">
            <Grid DataContext="{Binding SelectedItem, ElementName=MarkedList}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Background="{DynamicResource BgCard}" Padding="10,5" BorderThickness="0,0,0,1" BorderBrush="{DynamicResource BorderColor}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Full Message Details" FontWeight="Bold" Foreground="{DynamicResource TextSecondary}" Margin="0,0,15,0"/>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                            <Setter Property="Visibility" Value="Collapsed"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <TextBlock Text="{Binding Date, StringFormat='yyyy-MM-dd HH:mm:ss.fff'}" Foreground="{DynamicResource TextPrimary}" Margin="0,0,10,0"/>
                            <TextBlock Text="|" Foreground="{DynamicResource BorderColor}" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding Logger}" Foreground="{DynamicResource TextPrimary}" FontStyle="Italic"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <TextBox Grid.Row="1"
                         Text="{Binding Message, Mode=OneWay, TargetNullValue='Select a row to view details...'}"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Auto"
                         AcceptsReturn="True"
                         FontFamily="{StaticResource ContentFontFamily}"
                         FontSize="13"
                         Background="Transparent"
                         BorderThickness="0"
                         Padding="10"
                         Foreground="{DynamicResource TextPrimary}"/>
            </Grid>
        </Border>
    </Grid>
</Window>