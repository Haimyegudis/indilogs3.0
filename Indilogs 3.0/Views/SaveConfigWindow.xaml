<Window x:Class="IndiLogs_3._0.Views.SaveConfigWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Configuration" 
        Height="220" Width="400"
        WindowStartupLocation="CenterOwner" 
        Background="{DynamicResource BgDark}"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Configuration Name" FontSize="14" FontWeight="Bold" Margin="0,0,0,10" Foreground="{DynamicResource TextPrimary}"/>

        <TextBox Grid.Row="1" x:Name="NameTextBox" FontSize="14" Padding="5" Margin="0,0,0,20"
                 Background="{DynamicResource BgCard}" 
                 Foreground="{DynamicResource TextPrimary}" 
                 BorderBrush="{DynamicResource BorderColor}"
                 CaretBrush="{DynamicResource TextPrimary}"/>

        <TextBlock Grid.Row="1" 
                   FontSize="11" Foreground="{DynamicResource TextSecondary}" TextWrapping="Wrap" Height="30" Margin="0,0,0,55" Grid.RowSpan="3" VerticalAlignment="Bottom" Text=""/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,5">
            <Button Content="✔ OK" Click="OK_Click" Style="{DynamicResource ModernBtn}" Background="#10B981" Foreground="White" IsDefault="True"/>
            <Button Content="✖ Cancel" Click="Cancel_Click" Style="{DynamicResource ModernBtn}" Background="#6C757D" Foreground="White" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>