<Window x:Class="IndiLogs_3._0.Views.ColoringWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Coloring Rules" Height="500" Width="800"
        WindowStartupLocation="CenterOwner" 
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextPrimary}">

    <Window.Resources>
        <Style TargetType="ComboBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource PrimaryColor}"/>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Highlighting Rules" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock Text="Define rules to automatically color rows based on their content." Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="8" Padding="10">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ConditionsPanel">
                </StackPanel>
            </ScrollViewer>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="➕ Add Rule" Click="AddCondition_Click" Style="{DynamicResource ModernBtn}" Background="{DynamicResource BgCard}" Width="120"/>
            <Rectangle Width="1" Fill="{DynamicResource BorderColor}" Margin="15,5"/>
            <Button Content="🗑 Clear All" Click="Clear_Click" Style="{DynamicResource ModernBtn}" Background="{DynamicResource DangerColor}" Foreground="White" Width="100"/>
            <Button Content="✔ Save Rules" Click="OK_Click" Style="{DynamicResource ModernBtn}" Background="{DynamicResource SuccessColor}" Foreground="White" Margin="10,0" Width="120" FontWeight="Bold"/>
            <Button Content="Cancel" Click="Cancel_Click" Style="{DynamicResource ModernBtn}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>