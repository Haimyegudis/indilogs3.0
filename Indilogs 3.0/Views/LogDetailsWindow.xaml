<Window x:Class="IndiLogs_3._0.Views.LogDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log Details" Height="400" Width="700"
        WindowStartupLocation="CenterScreen" 
        Background="{DynamicResource BgDark}"
        ResizeMode="CanResizeWithGrip">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Time:" FontWeight="Bold" Grid.Row="0" Grid.Column="0" Margin="0,0,5,5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
            <TextBox x:Name="TimeText" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                     Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>

            <TextBlock Text="Level:" FontWeight="Bold" Grid.Row="0" Grid.Column="2" Margin="10,0,5,5" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
            <TextBox x:Name="LevelText" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                     Grid.Row="0" Grid.Column="3" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>

            <TextBlock Text="Thread:" FontWeight="Bold" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
            <TextBox x:Name="ThreadText" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                     Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>

            <TextBlock Text="Logger:" FontWeight="Bold" Grid.Row="1" Grid.Column="2" Margin="10,0,5,0" VerticalAlignment="Center" Foreground="{DynamicResource TextPrimary}"/>
            <TextBox x:Name="LoggerText" IsReadOnly="True" BorderThickness="0" Background="Transparent" 
                     Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" FontSize="12" Foreground="{DynamicResource TextSecondary}"/>
        </Grid>

        <TextBox x:Name="MessageText" 
                 Grid.Row="1"
                 TextWrapping="Wrap" 
                 AcceptsReturn="True" 
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True" 
                 FontFamily="Consolas"
                 FontSize="13"
                 Padding="10"
                 BorderThickness="1"
                 BorderBrush="{DynamicResource BorderColor}"
                 Background="{DynamicResource BgCard}"
                 Foreground="{DynamicResource TextPrimary}"
                 Margin="0,5"/>

        <Button Grid.Row="2" Content="Close" Click="Close_Click" 
                Style="{DynamicResource ModernBtn}"
                HorizontalAlignment="Right" Width="80" Margin="0,10,0,0"/>
    </Grid>
</Window>