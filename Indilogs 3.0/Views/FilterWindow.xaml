<Window x:Class="IndiLogs_3._0.Views.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:IndiLogs_3._0.Models"
        Title="Filter Editor" Height="600" Width="850"
        WindowStartupLocation="CenterOwner" 
        Background="White"
        FontFamily="{DynamicResource GlobalFontFamily}">

    <Window.Resources>
        <x:Array x:Key="FilterFields" Type="sys:String">
            <sys:String>Message</sys:String>
            <sys:String>Level</sys:String>
            <sys:String>ThreadName</sys:String>
            <sys:String>Logger</sys:String>
        </x:Array>

        <x:Array x:Key="ConditionOperators" Type="sys:String">
            <sys:String>Contains</sys:String>
            <sys:String>Equals</sys:String>
            <sys:String>Begins With</sys:String>
            <sys:String>Ends With</sys:String>
            <sys:String>Regex</sys:String>
        </x:Array>

        <Style x:Key="OperatorLinkStyle" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="TextDecorations" Value="Underline"/>
            <Setter Property="Foreground" Value="#2E7D32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1B5E20"/>
                </Trigger>
                <DataTrigger Binding="{Binding LogicalOperator}" Value="NOT AND">
                    <Setter Property="Foreground" Value="#C62828"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LogicalOperator}" Value="NOT OR">
                    <Setter Property="Foreground" Value="#C62828"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <HierarchicalDataTemplate DataType="{x:Type models:FilterNode}" ItemsSource="{Binding Children}">
            <Grid Margin="0,2">

                <StackPanel Orientation="Horizontal" Margin="0,4">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Group">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="{Binding LogicalOperator}" 
                       Style="{StaticResource OperatorLinkStyle}" 
                       ToolTip="Right-click options"
                       Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">

                        <TextBlock.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Change Operator" FontWeight="Bold" IsEnabled="False"/>

                                <MenuItem Header="AND" 
                                  Command="{Binding PlacementTarget.Tag.SetAndCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="🟢"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="OR" 
                                  Command="{Binding PlacementTarget.Tag.SetOrCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="🟢"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="NOT AND (NAND)" 
                                  Command="{Binding PlacementTarget.Tag.SetNotAndCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="🔴"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="NOT OR (NOR)" 
                                  Command="{Binding PlacementTarget.Tag.SetNotOrCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="🔴"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>
                                <MenuItem Header="Actions" FontWeight="Bold" IsEnabled="False"/>

                                <MenuItem Header="Add Condition" 
                                  Command="{Binding PlacementTarget.Tag.AddConditionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="➕"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <MenuItem Header="Add Group" 
                                  Command="{Binding PlacementTarget.Tag.AddGroupCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="📂"/>
                                    </MenuItem.Icon>
                                </MenuItem>

                                <Separator/>

                                <MenuItem Header="Remove Group" 
                                  Command="{Binding PlacementTarget.Tag.RemoveNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" 
                                  CommandParameter="{Binding}">
                                    <MenuItem.Icon>
                                        <TextBlock Text="🗑"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </TextBlock.ContextMenu>
            </TextBlock>

                    <TextBlock Text=" (Right Click)" Foreground="#999" FontSize="10" VerticalAlignment="Center" Margin="5,0,0,0" FontStyle="Italic" IsHitTestVisible="False"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="20,2,0,2">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Type}" Value="Condition">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <TextBlock Text="Where " Foreground="Gray" VerticalAlignment="Center"/>
                    <ComboBox ItemsSource="{StaticResource FilterFields}" SelectedItem="{Binding Field}" Width="110" Margin="2"/>
                    <ComboBox ItemsSource="{StaticResource ConditionOperators}" SelectedItem="{Binding Operator}" Width="100" Margin="2"/>
                    <TextBox Text="{Binding Value}" Width="150" Margin="2"/>

                    <Button Command="{Binding DataContext.RemoveNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                    CommandParameter="{Binding}" 
                    Content="✕" Background="Transparent" BorderThickness="0" Foreground="Red" FontWeight="Bold" Margin="5,0"/>
                </StackPanel>
            </Grid>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Advanced Filter Editor" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>

        <Border Grid.Row="1" BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="3" Background="#FAFAFA">
            <TreeView ItemsSource="{Binding RootNodes}" BorderThickness="0" Background="Transparent" Padding="10">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True"/>
                        <Setter Property="Margin" Value="0,2"/>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="🗑 Clear All" Click="Clear_Click" Style="{DynamicResource ModernBtn}" Background="#EF4444" Foreground="White"/>
            <Button Content="✔ Apply" Click="Apply_Click" Style="{DynamicResource ModernBtn}" Background="#10B981" Foreground="White" Margin="10,0"/>
            <Button Content="✖ Cancel" Click="Cancel_Click" Style="{DynamicResource ModernBtn}" Background="#6C757D" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>