<Window x:Class="IndiLogs_3._0.Views.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:models="clr-namespace:IndiLogs_3._0.Models"
        Title="Filter Editor" Height="500" Width="800"
        WindowStartupLocation="CenterOwner" 
        Background="{DynamicResource BgDark}"
        Foreground="{DynamicResource TextPrimary}">

    <Window.Resources>
        <x:Array x:Key="FilterFields" Type="sys:String">
            <sys:String>Message</sys:String>
            <sys:String>Level</sys:String>
            <sys:String>ThreadName</sys:String>
            <sys:String>Logger</sys:String>
            <sys:String>ProcessName</sys:String>
        </x:Array>

        <x:Array x:Key="ConditionOperators" Type="sys:String">
            <sys:String>Contains</sys:String>
            <sys:String>Equals</sys:String>
            <sys:String>Begins With</sys:String>
            <sys:String>Ends With</sys:String>
            <sys:String>Regex</sys:String>
        </x:Array>

        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource BgCard}"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CaretBrush" Value="{DynamicResource PrimaryColor}"/>
        </Style>

        <Style x:Key="OperatorLinkStyle" TargetType="TextBlock">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource SuccessColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Trigger>
                <DataTrigger Binding="{Binding LogicalOperator}" Value="OR">
                    <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LogicalOperator}" Value="NOT AND">
                    <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding LogicalOperator}" Value="NOT OR">
                    <Setter Property="Foreground" Value="{DynamicResource DangerColor}"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <HierarchicalDataTemplate DataType="{x:Type models:FilterNode}" ItemsSource="{Binding Children}">
            <Border Background="{DynamicResource BgCard}" CornerRadius="8" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" Margin="4,6" Padding="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Group">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <TextBlock Text="{Binding LogicalOperator}" 
                                   Style="{StaticResource OperatorLinkStyle}" 
                                   ToolTip="Right-click to change logic or add items"
                                   Tag="{Binding DataContext, RelativeSource={RelativeSource AncestorType=Window}}">
                            <TextBlock.ContextMenu>
                                <ContextMenu FontSize="13">
                                    <MenuItem Header="AND (All must match)" Command="{Binding PlacementTarget.Tag.SetAndCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}"/>
                                    <MenuItem Header="OR (At least one)" Command="{Binding PlacementTarget.Tag.SetOrCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}"/>
                                    <Separator/>
                                    <MenuItem Header="NOT AND (NAND)" Command="{Binding PlacementTarget.Tag.SetNotAndCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}"/>
                                    <MenuItem Header="NOT OR (NOR)" Command="{Binding PlacementTarget.Tag.SetNotOrCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}"/>
                                    <Separator/>
                                    <MenuItem Header="Add Condition" Command="{Binding PlacementTarget.Tag.AddConditionCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}">
                                        <MenuItem.Icon>
                                            <TextBlock Text="➕"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Add Sub-Group" Command="{Binding PlacementTarget.Tag.AddGroupCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}">
                                        <MenuItem.Icon>
                                            <TextBlock Text="📂"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <Separator/>
                                    <MenuItem Header="Remove This Group" Command="{Binding PlacementTarget.Tag.RemoveNodeCommand, RelativeSource={RelativeSource AncestorType=ContextMenu}}" CommandParameter="{Binding}" Foreground="Red">
                                        <MenuItem.Icon>
                                            <TextBlock Text="🗑"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </ContextMenu>
                            </TextBlock.ContextMenu>
                        </TextBlock>
                        <TextBlock Text=" (Group)" Foreground="{DynamicResource TextSecondary}" FontSize="12" VerticalAlignment="Center" Margin="8,0,0,0" FontStyle="Italic"/>
                    </StackPanel>

                    <Grid>
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Type}" Value="Condition">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="40"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Where" Foreground="{DynamicResource TextSecondary}" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="14" FontWeight="SemiBold"/>

                        <ComboBox Grid.Column="1" ItemsSource="{StaticResource FilterFields}" SelectedItem="{Binding Field}"/>
                        <ComboBox Grid.Column="2" ItemsSource="{StaticResource ConditionOperators}" SelectedItem="{Binding Operator}"/>
                        <TextBox Grid.Column="3" Text="{Binding Value}"/>

                        <Button Grid.Column="4" Command="{Binding DataContext.RemoveNodeCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                CommandParameter="{Binding}" 
                                Content="✕" Style="{DynamicResource ModernBtn}" Background="Transparent" Foreground="{DynamicResource DangerColor}" FontWeight="Bold" FontSize="14" Padding="0"/>
                    </Grid>
                </StackPanel>
            </Border>
        </HierarchicalDataTemplate>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="Advanced Filter Editor" FontSize="22" FontWeight="Bold" Foreground="{DynamicResource TextPrimary}"/>
            <TextBlock Text="Build complex queries using groups and logic gates. Right-click on operators (AND/OR) to add conditions." Foreground="{DynamicResource TextSecondary}" Margin="0,5,0,0" FontSize="13"/>
        </StackPanel>

        <Border Grid.Row="1" Background="{DynamicResource BgPanel}" BorderBrush="{DynamicResource BorderColor}" BorderThickness="1" CornerRadius="8">
            <TreeView ItemsSource="{Binding RootNodes}" BorderThickness="0" Background="Transparent" Padding="10">
                <TreeView.ItemContainerStyle>
                    <Style TargetType="TreeViewItem">
                        <Setter Property="IsExpanded" Value="True"/>
                        <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TreeViewItem">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <Border Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter Name="PART_Header" ContentSource="Header" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                        </Border>
                                        <ItemsPresenter Name="ItemsHost" Grid.Row="1" Margin="20,0,0,0"/>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TreeView.ItemContainerStyle>
            </TreeView>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="🗑 Reset" Click="Clear_Click" Style="{DynamicResource ModernBtn}" Background="{DynamicResource DangerColor}" Foreground="White" Width="100"/>
            <Button Content="✔ Apply Filter" Click="Apply_Click" Style="{DynamicResource ModernBtn}" Background="{DynamicResource SuccessColor}" Foreground="White" Margin="10,0" Width="120" FontWeight="Bold"/>
            <Button Content="Cancel" Click="Cancel_Click" Style="{DynamicResource ModernBtn}" Width="100"/>
        </StackPanel>
    </Grid>
</Window>