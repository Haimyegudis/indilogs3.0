<UserControl x:Class="IndiLogs_3._0.Views.GraphsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:vm="clr-namespace:IndiLogs_3._0.ViewModels"
             xmlns:models="clr-namespace:IndiLogs_3._0.Models"
             xmlns:converters="clr-namespace:IndiLogs_3._0.Converters">

    <UserControl.Resources>
        <converters:OxyColorToBrushConverter x:Key="OxyColorToBrushConverter"/>

        <Style x:Key="PanelHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="Margin" Value="5,10,5,5"/>
            <Setter Property="FontSize" Value="11"/>
        </Style>

        <Style x:Key="ModernBtn" TargetType="Button">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="3" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#D0D0D0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="350"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#F3F3F3" BorderBrush="#DDDDDD" BorderThickness="0,0,1,0" Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="AVAILABLE COMPONENTS (Double Click to Add)" Style="{StaticResource PanelHeader}" Grid.Row="0"/>
                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" 
                             Background="White" Foreground="Black" BorderThickness="1" BorderBrush="#CCC" Padding="6" Margin="0,0,0,5"
                             Tag="Search..." FontSize="12"/>

                    <TreeView Grid.Row="1" ItemsSource="{Binding ComponentTree}" 
                              Background="Transparent" Foreground="Black" BorderThickness="0"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}"/>
                                <Setter Property="Visibility" Value="{Binding IsVisible, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                <Setter Property="Foreground" Value="Black"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.ItemTemplate>
                            <HierarchicalDataTemplate ItemsSource="{Binding Children}">
                                <TextBlock Text="{Binding Name}" Padding="4,2" Background="Transparent" Cursor="Hand">
                                    <TextBlock.InputBindings>
                                        <MouseBinding Gesture="LeftDoubleClick" 
                                                      Command="{Binding DataContext.AddSignalToActiveCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                                      CommandParameter="{Binding FullPath}"/>
                                    </TextBlock.InputBindings>
                                </TextBlock>
                            </HierarchicalDataTemplate>
                        </TreeView.ItemTemplate>
                    </TreeView>
                </Grid>

                <TextBlock Text="ACTIVE CHART SIGNALS" Style="{StaticResource PanelHeader}" Grid.Row="2"/>
                <Grid Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <ListBox ItemsSource="{Binding ActiveChartSignals}" Background="White" Foreground="#005A9E" BorderThickness="1" BorderBrush="#CCCCCC"
                             SelectedItem="{Binding SelectedSignalToRemove}" FontSize="11" Margin="0,0,0,5"/>
                    <Button Grid.Row="1" Content="Remove Selected" Command="{Binding RemoveSignalFromActiveCommand}" 
                            Style="{StaticResource ModernBtn}" Background="#FFEBEB" BorderBrush="#FFCCCC" Foreground="#CC0000"/>
                </Grid>

                <TextBlock Text="TIMELINE" Style="{StaticResource PanelHeader}" Grid.Row="4"/>
                <ListBox Grid.Row="5" ItemsSource="{Binding StateTimeline}" Background="White" Foreground="Black" BorderThickness="1" BorderBrush="#CCCCCC" FontSize="11">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2" Background="Transparent">
                                <Grid.InputBindings>
                                    <MouseBinding Gesture="LeftDoubleClick" Command="{Binding DataContext.ZoomToStateCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}"/>
                                </Grid.InputBindings>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="110"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                </Grid.ColumnDefinitions>
                                <Rectangle Fill="{Binding Color, Converter={StaticResource OxyColorToBrushConverter}}" Width="4" Height="14" VerticalAlignment="Center"/>
                                <TextBlock Grid.Column="1" Text="{Binding TimeRangeStr}" Foreground="#666" Margin="5,0,0,0" VerticalAlignment="Center" FontFamily="Consolas" FontSize="10"/>
                                <TextBlock Grid.Column="2" Text="{Binding Name}" Margin="5,0,0,0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                <TextBlock Grid.Column="3" Text="{Binding DurationStr}" Foreground="#888" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="10"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </Grid>
        </Border>

        <Grid Grid.Column="1" Background="#FAFAFA">
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Background="#EFEFEF" Padding="5" BorderBrush="#DDDDDD" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="➕ Chart" Command="{Binding AddChartCommand}" Style="{StaticResource ModernBtn}" Background="#E6F4EA" Foreground="#1E7E34" FontWeight="Bold"/>
                    <Button Content="➖ Chart" Command="{Binding RemoveChartCommand}" Style="{StaticResource ModernBtn}" Background="#FDECEA" Foreground="#C62828"/>
                    <Button Content="Clear" Command="{Binding ClearChartCommand}" Style="{StaticResource ModernBtn}"/>

                    <Rectangle Width="1" Height="20" Fill="#CCC" Margin="10,0"/>

                    <TextBlock Text="Start:" Foreground="#444" VerticalAlignment="Center" Margin="5,0"/>
                    <TextBox Text="{Binding StartTimeText, UpdateSourceTrigger=LostFocus}" Width="65" Background="White" Foreground="Black" BorderThickness="1" BorderBrush="#CCC" VerticalContentAlignment="Center" TextAlignment="Center" Padding="2"/>

                    <TextBlock Text="End:" Foreground="#444" VerticalAlignment="Center" Margin="8,0,5,0"/>
                    <TextBox Text="{Binding EndTimeText, UpdateSourceTrigger=LostFocus}" Width="65" Background="White" Foreground="Black" BorderThickness="1" BorderBrush="#CCC" VerticalContentAlignment="Center" TextAlignment="Center" Padding="2"/>

                    <Button Content="Apply" Command="{Binding ApplyTimeFilterCommand}" Style="{StaticResource ModernBtn}" Background="#E8F0FE" Foreground="#1967D2" FontWeight="Bold" Margin="5,0"/>
                    <Button Content="Reset" Command="{Binding ResetZoomCommand}" Style="{StaticResource ModernBtn}"/>

                    <Rectangle Width="1" Height="20" Fill="#CCC" Margin="10,0"/>

                    <Button Command="{Binding PlayCommand}" Content="▶ Play" Background="#E6F4EA" Foreground="#2E7D32" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernBtn}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Command="{Binding PauseCommand}" Content="⏸ Pause" Background="#FFF8E1" Foreground="#F57F17" FontWeight="Bold">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource ModernBtn}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>

                    <TextBlock Text="{Binding PlaybackSpeedText}" Foreground="Black" VerticalAlignment="Center" Margin="10,0,5,0" FontWeight="Bold" Width="30" TextAlignment="Center"/>
                    <Button Content="+" Command="{Binding SpeedUpCommand}" Style="{StaticResource ModernBtn}" Width="25" Padding="0"/>
                    <Button Content="-" Command="{Binding SpeedDownCommand}" Style="{StaticResource ModernBtn}" Width="25" Padding="0"/>
                </StackPanel>
            </Border>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="White">
                <ItemsControl ItemsSource="{Binding Charts}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="{Binding BorderColor}" BorderThickness="{Binding BorderThickness}" Margin="4,2" Height="300" Background="White">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <DockPanel Background="#F5F5F5" LastChildFill="False">
                                        <TextBlock Text="{Binding Title}" Foreground="#333" Margin="8,4" FontWeight="Bold" FontSize="11"/>
                                        <Button Content="↗" Command="{Binding FloatCommand}" Width="24" Height="20" Padding="0" Background="Transparent" Foreground="#666" BorderThickness="0" DockPanel.Dock="Right" Cursor="Hand" ToolTip="Detach"/>
                                    </DockPanel>
                                    <oxy:PlotView Grid.Row="1" Model="{Binding Model}" Controller="{Binding Controller}" Background="Transparent"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>

            <StatusBar Grid.Row="2" Background="#007ACC" Foreground="White">
                <StatusBarItem>
                    <TextBlock Text="{Binding Status}" FontWeight="SemiBold" Margin="5,0"/>
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</UserControl>