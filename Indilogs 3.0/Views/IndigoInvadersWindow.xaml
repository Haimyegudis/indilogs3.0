<Window x:Class="IndiLogs_3._0.Views.IndigoInvadersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Indigo Invaders" Height="600" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#1A1A24"
        KeyDown="Window_KeyDown"
        KeyUp="Window_KeyUp">
    <Grid>
        <Canvas x:Name="StarFieldCanvas" IsHitTestVisible="False"/>

        <Canvas x:Name="GameCanvas" ClipToBounds="True" Focusable="True"/>

        <Border VerticalAlignment="Top" Background="#CC000000" Padding="15,5">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="SCORE: " Foreground="#3B82F6" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="ScoreText" Text="0" Foreground="White" FontWeight="Bold" FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                    <TextBlock Text="LIVES: " Foreground="#EF4444" FontWeight="Bold" FontSize="16"/>
                    <TextBlock x:Name="LivesText" Text="3" Foreground="White" FontWeight="Bold" FontSize="16"/>
                </StackPanel>

                <TextBlock x:Name="LevelText" Text="LEVEL 1" HorizontalAlignment="Center" Foreground="#10B981" FontWeight="Bold" FontSize="16"/>
            </DockPanel>
        </Border>

        <Grid x:Name="Overlay" Background="#DD000000" Visibility="Visible">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="OverlayTitle" Text="INDIGO INVADERS" Foreground="#3B82F6" FontSize="40" FontWeight="Bold" HorizontalAlignment="Center">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="0"/>
                    </TextBlock.Effect>
                </TextBlock>

                <TextBlock x:Name="OverlayMessage" Text="Protect the Logs from the Bugs!" Foreground="Gray" FontSize="18" HorizontalAlignment="Center" Margin="0,10,0,30"/>

                <Button Content="START MISSION" Click="StartGame_Click" 
                        Background="#3B82F6" Foreground="White" FontWeight="Bold" Padding="20,10"
                        HorizontalAlignment="Center" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="bd" Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="bd" Property="Background" Value="#60A5FA"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <TextBlock Text="Controls: Arrows to Move, Space to Shoot" Foreground="#555" FontSize="12" HorizontalAlignment="Center" Margin="0,20,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>